{
  "compilerOptions": {
    "module": "es2022",
    "esModuleInterop": true,
    "target": "es2022",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "resolveJsonModule": true,
    "strict": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
  },
  "include": [
    "src/**/*",
  ],
  "ts-node": {
    "esm": true
  }
}